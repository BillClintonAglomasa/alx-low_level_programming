#include <stdio.h>

/**
 * main - Entry point
 *
 * Return: Always return 0 (Success)
 */
int main(void)
{
        /* declarations */
	char a;
	int b;
        long int c;
	long long int d;
	float e;
		
	printf("Size of a char: %lu bytes(s)\n", (unsigned long)sizeof(a));
	printf("Size of a int: %lu bytes(s)\n", (unsigned long)sizeof(b));
	printf("Size of a long int: %lu bytes(s)\n", (unsigned long)sizeof(c));
	printf("Size of a long long int: %lu bytes(s)", (unsigned long)sizeof(d));
	printf("Size of a float: %lu bytes(s)", (unsigned long)sizeof(e));
	return (0);
}
